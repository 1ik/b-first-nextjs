{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@bd-first/common-ui": ["libs/common-ui/src/index.ts"],
      "@bd-first/common-ui/server": ["common-ui/src/server.ts"],
      "@bd-first/components/bd-first/desktop/header": [
        "libs/components/bd-first/desktop/header/src/index.ts"
      ],
      "@bd-first/components/bd-first/desktop/header/server": [
        "libs/components/bd-first/desktop/header/src/server.ts"
      ],
      "@bd-first/news-site-ui": ["libs/news-site-ui/src/index.ts"],
      "@bd-first/news-site-ui/server": ["news-site-ui/src/server.ts"],
      "@bd-first/pages/bd-first/desktop/homepage-1": [
        "libs/pages/bd-first/desktop/homepage-1/src/index.ts"
      ],
      "@bd-first/pages/bd-first/desktop/homepage-1/server": [
        "libs/pages/bd-first/desktop/homepage-1/src/server.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
