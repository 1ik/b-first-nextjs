      "@bfirst/components-button": ["libs/components/button/src/index.ts"],
      "@bfirst/components-categories": ["libs/features/categories/src/index.ts"],
      "@bfirst/components-icon": ["libs/components/icon/src/index.ts"],
      "@bfirst/components-layout": ["libs/components/layouts/src/index.ts"],
